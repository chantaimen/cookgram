<div class="user-name">
    <%= comment.user.user_name %>
    <div class="comment-content">
      <%= comment.content %>
      <% if comment.user == current_user %>
      <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure to delete" }, remote: true do %>
        <span class="pull-right"><span class="glyphicon glyphicon-remove delete-comment"></span><span></span>
      <% end %>
    <% end %>
    <br>
    </div>
</div>
